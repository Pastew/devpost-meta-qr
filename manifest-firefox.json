{
    "manifest_version": 3,
    "name": "Devpost Meta Horizon QR",
    "version": "1.0",
    "description": "Displays a QR code for Meta Horizon 'Try it out' links on Devpost",
    "content_scripts": [
        {
            "matches": [
                "*://devpost.com/software/*"
            ],
            "js": [
                "qrcode.min.js",
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "devpost-meta-qr@pastew.com",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}